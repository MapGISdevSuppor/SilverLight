        <CheckBox Content="还原显示" Height="16" HorizontalAlignment="Left" Margin="23,12,0,0" Name="checkBox_origin" VerticalAlignment="Top"  />
        <CheckBox Content="跟随显示" Height="16" HorizontalAlignment="Left" Margin="23,46,0,0" Name="checkBox_followshow" VerticalAlignment="Top" />
        <CheckBox Content="显示坐标点" Height="16" HorizontalAlignment="Left" Margin="23,78,0,0" Name="checkBox_showcoor" VerticalAlignment="Top" />
        <RadioButton Content="低质量" Height="16"  HorizontalAlignment="Left" Margin="23,111,0,0" Name="radioButton_img_low" VerticalAlignment="Top" GroupName="radioButton_img" />
        <RadioButton Content="高质量" Height="16" HorizontalAlignment="Left" Margin="90,111,0,0" Name="radioButton_img_high" VerticalAlignment="Top" GroupName="radioButton_img" />
            <Button Content="确定" Height="23" HorizontalAlignment="Left" Margin="33,157,0,0" Name="button_submit" VerticalAlignment="Top" Width="59" Click="button_submit_Click" />
            <Button Content="取消" Height="23" HorizontalAlignment="Right" Margin="0,158,30,0" Name="button_cancel" VerticalAlignment="Top" Width="59" Click="button_cancel_Click" />
        </Grid>
    </my:DialogPanel>
</uc:BaseUserControl>
