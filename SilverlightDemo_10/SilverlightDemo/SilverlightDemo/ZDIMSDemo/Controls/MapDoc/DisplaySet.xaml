<uc:BaseUserControl x:Class="ZDIMSDemo.Controls.MapDoc.DisplaySet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:ZDIMSDemo.Controls"
    xmlns:my="clr-namespace:EasySL.Controls;assembly=EasySL.Controls"
    mc:Ignorable="d"
    d:DesignHeight="230" d:DesignWidth="200"  xmlns:my1="clr-namespace:ZDIMS.Map;assembly=ZDIMS1.0">
    <my:DialogPanel Name="dialog" Width="200" Background="White" Height="230" DragEnable="True" Title="显示参数设置" MouseLeftButtonDown="DialogPanel_MouseLeftButtonDown">
